{% extends 'base.twig' %}

{% block conteudo %}

<section>
	<div class="container">
		<div class="Row Lista-hqs _gutters">
		{% for item in hqs %}
			<div class="box-hq col _col-3">
				<a class="hover" href="{{ item.link }}">				
					<img class="thumb _rounded" src="{{ Image(item.get_field('paginas').0.pagina).src  }}">
					<h4 class="titulo">{{ item.title }}</h4>
					<button class="Button">Ler</button>
				</a>
			</div>	
		{% endfor %}
		</div>	
	</div>
</section>

{% endblock %}